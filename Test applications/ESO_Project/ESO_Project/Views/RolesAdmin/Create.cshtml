@model ESO_Project.Models.RoleViewModel

@{
    ViewBag.Title = "Dodaj rolę";
}

<div class="panel-heading">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <font face="Times New Roman" size="20" color="yellow">@ViewBag.Title</font>
                </th>
            </tr>
        </thead>
    </table>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-body">
        <div class="panel panel-primary">
            <div class="bg-primary col-md-12 container-fluid">
                <div class="col-md-1 container-fluid" align="left">
                    <b>Rola</b>
                </div>

            </div>
        </div>
        <div class="panel panel-info">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-md-2" align="right"><b>Nazwa roli:</b></div>
                   <!-- @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })-->
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-2" align="right"><b>Opis roli:</b></div>
                            <!--@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })-->
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Utwórz" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
            </div>
        </div>
   
            }

            <div>
                @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn btn-info" })
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
