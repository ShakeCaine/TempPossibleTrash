@model ESO_Project.Entities.File
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div class="bs-example">
    <h4 class="modal-title" id="myModalLabel">Are you sure you want to delete this File?</h4>
</div>

<div class="body">
    @using (Html.BeginForm("Delete", "FilesManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(item => item.Name)
            </dd>

            <dd>
                @Html.DisplayFor(item => item.Size)
            </dd>

            <dd>
                @Html.DisplayFor(item => item.SyncTime)
            </dd>
        </dl>
    }

</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="footer">
        @Html.ActionLink("No", "Upload", new { @class = "btn btn-success-sm" })
        <input class="btn btn-danger" type="submit" value="Yes" />
    </div>
}
