<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ESO Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SecData", "Index", "Home", new { area = "" }, new { @class = "nazwa-wlasna" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "bialyhome" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "bialyhome" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "bialyhome" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("MyFiles", "Upload", "FilesManager", null, new { @class = "bialyhome" })</li>
                        if(User.IsInRole("Admin"))
                        { 
                            <li>@Html.ActionLink("Users", "Index", "UsersAdmin", null, new { @class = "bialyhome" })</li>
                            <li>@Html.ActionLink("Roles", "Index", "RolesAdmin", null, new { @class = "bialyhome" })</li>
                        }
                        
                        <li>@Html.ActionLink("Profile", "Index", "UserProfile", null, new { @class = "bialyhome" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Application - Colaborative Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
